<%- include('partials/header.ejs')%>

<div class="container">
    <div class="card" id="formulario-pergunta">
        <div class="card-header">
            <h3>Realizar perguntra</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/salvarpergunta">
                <label for="txtTitulo">Titulo</label>
                <input type="text" name="txtTitulo" id="txtTitulo" class="form-control">
                <label for="txaDescri">Descrição</label>
                <textarea placeholder="Descreva a sua pergunta" class="form-control" name="txaDescri" id="txaDescri"
                    cols="30" rows="10"></textarea>
                <br>
                <button type="submit" class="btn btn-success">Perguntar</button>

            </form>
        </div>
    </div>

</div>

<%- include('partials/footer.ejs')%>