<%- include('partials/header.ejs')%>


<div class="container">
    <h1><%= pergunta.titulo %></h1>
    <br>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form action="/responder" method="POST">
        <textarea name="txaResposta" placeholder="Digite sua resposta" id="txaResposta" cols="30" rows="10"
            class="form-control"></textarea>
        <br>
        <!-- Ideia pra manter o id porem nÃ£o aparecer o cara -->
        <input type="hidden" name="txtId" id="txtId" value="<%= pergunta.id %>">
        <button type="submit" class="btn btn-success">Responder</button>
    </form>
    <br>
    <hr>
    <h3>Respostas</h3>
    <% respostas.forEach(resposta => { %>
    <div class="card">
        <div class="card-body">
            <%= resposta.corpo %>
        </div>
    </div>
    <br>
    <% }); %>



</div>


<%- include('partials/footer.ejs')%>